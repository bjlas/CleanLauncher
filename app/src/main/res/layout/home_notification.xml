<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">


    <TextView
        android:id="@+id/home_notification_number"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/color_home_notification_on_background"
        android:gravity="center"
        android:text="(1)"
        android:textColor="@color/color_home_notification_on_text" />

    <TextView
        android:id="@+id/home_notification_label"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/color_home_notification_on_background"
        android:gravity="center"
        android:text="Label"
        android:textColor="@color/color_home_notification_on_text" />


</LinearLayout>