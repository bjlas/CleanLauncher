<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight=".7"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/menu_item_notification_label"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@color/color_menu_notification_on_text"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingLeft="5dp"
            android:text="label"
            android:textColor="@color/color_home_notification_on_text"
            android:textSize="14sp"
            android:textStyle="bold"
            app:fontFamily="serif" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".2">

        <TextView
            android:id="@+id/menu_item_notification_alert"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_menu_notification_on_text"
            android:gravity="center"
            android:text="@string/notification_alert"
            android:textColor="@color/color_home_notification_on_text"
            android:textSize="14sp"
            android:textStyle="bold"
            app:fontFamily="serif" />
    </LinearLayout>
</LinearLayout>
