<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_notification_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_home_notification_on_background"
            android:padding="10dp"
            android:text="Label"
            android:textColor="@color/color_home_notification_on_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_notification_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_home_notification_on_background"
                android:padding="10dp"
                android:text="Date"
                android:textColor="@color/color_home_notification_on_text" />

            <TextView
                android:id="@+id/home_notification_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_home_notification_on_background"
                android:padding="10dp"
                android:text="Time"
                android:textColor="@color/color_home_notification_on_text" />

        </LinearLayout>

        <TextView
            android:id="@+id/home_notification_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_home_notification_on_background"
            android:padding="10dp"
            android:text="Text"
            android:textColor="@color/color_home_notification_on_text" />

    </LinearLayout>
</LinearLayout>