<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:padding="16dp">


    <TextView
        android:id="@+id/menu_item_label"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/menu_item_addToHome_button"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:lines="1"
        android:text="menu_item_label"
        android:textColor="#4d4d4d"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/menu_item_addToHome_button"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_weight="0"
        android:clickable="true"
        android:gravity="center|center_vertical"
        android:text="+"
        android:textColor="#ee1111"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/menu_item_uninstall_button"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="113dp"
        android:layout_weight="0"
        android:clickable="true"
        android:gravity="center|center_vertical"
        android:text="-"
        android:textColor="#ee1111"
        android:textSize="36sp"
        android:textStyle="bold" />


</RelativeLayout>
